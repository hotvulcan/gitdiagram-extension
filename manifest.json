{
  "manifest_version": 3,
  "name": "GitDiagram Opener",
  "version": "1.0",
  "description": "Open current GitHub repo in GitDiagram",
  "permissions": ["tabs", "scripting"],
  "host_permissions": [
    "https://github.com/*",
    "https://gitdiagram.com/*"
  ],
  "action": {
    "default_title": "Open in GitDiagram",
    "default_icon": {
      "16": "icon.png",
      "32": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  }
}
